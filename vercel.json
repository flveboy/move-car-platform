{
  "version": 2,
  "builds": [
    {
      "src": "functions/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",  // 处理 public 目录下的所有静态文件
      "use": "@vercel/static"  // 使用静态资源构建器
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/functions/api/$1"
    },
    {
      "src": "/(.*)",  // 其他所有路径指向 public 目录下的对应文件
      "dest": "/public/$1"
    },
    {
      "src": "/",  // 根路径默认指向 index.html
      "dest": "/public/index.html"
    }
  ]
}
